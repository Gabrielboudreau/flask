    <script type="text/javascript">

      function mobileView(x) {
        var pageElements = ["about", "links", "works", "contact", "storm", "myName", "back", "forward", "email", "discord", "sketchIcon", "minorIcon", "majorIcon", "play", "galleryBack", "scratch", "twitter", "instagram", "github", "linkedPlay"];
        var elementSizes = ["75", "70", "70", "75", "300", "300", "45", "45", "73", "70", "120", "105", "160", "85", "45", "145", "135", "140", "152", "85"];
        var elementPercentages = ["0.8", "0.8", "0.8", "0.8", "0.75", "0.75", "0.75", "0.75", "0.75", "0.75", "0.65", "0.65", "0.7", "0.75", "0.75", "0.75", "0.75", "0.75", "0.75", "0.75"];
        if (x.matches) {
          var i = 19;
          while (i > -1) {
            document.getElementById(pageElements[i]).width = document.getElementById(pageElements[i]).width * elementPercentages[i];
            i--;
          }
          document.getElementById("sketchIcon").style.marginRight = "0.5rem"; 
          document.getElementById("minorIcon").style.marginRight = "0.5rem"; 
          document.getElementById("minorIcon").style.marginLeft = "0.5rem"; 
          document.getElementById("majorIcon").style.marginLeft = "0.75rem"; 

          document.getElementById("scratch").style.marginRight = "0.5rem"; 
          document.getElementById("twitter").style.marginLeft = "0.5rem"; 
          document.getElementById("instagram").style.marginRight = "0.5rem"; 
          document.getElementById("github").style.marginLeft = "0.5rem"; 
        } else {
          var i = 19;
          while (i > -1) {
          document.getElementById(pageElements[i]).width = elementSizes[i];
          i--;
          }
          document.getElementById("sketchIcon").style.marginRight = "1rem"; 
          document.getElementById("minorIcon").style.marginRight = "1rem"; 
          document.getElementById("minorIcon").style.marginLeft = "1rem"; 
          document.getElementById("majorIcon").style.marginLeft = "1.3rem";

          document.getElementById("scratch").style.marginRight = "1.1rem"; 
          document.getElementById("twitter").style.marginLeft = "1rem"; 
          document.getElementById("instagram").style.marginRight = "1rem"; 
          document.getElementById("github").style.marginLeft = "1rem"; 
        }
      };

      var x = window.matchMedia("(max-width: 700px)")
      mobileView(x)
      x.addListener(mobileView)

    </script>
    
